<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.saimon22.drivingapp2_1.ChangePasswordPage">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/goodbackground"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:background="@drawable/whiteroundtextbackground"
                android:textColor="#FFFFFF"
                android:textColorHint="#FFFFFF"
                android:id="@+id/userName"
                android:hint=" User Name"

                android:paddingLeft="20dp"
                android:layout_marginBottom="10dp"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:background="@drawable/whiteroundtextbackground"
                android:textColor="#FFFFFF"
                android:textColorHint="#FFFFFF"
                android:id="@+id/password"
                android:hint=" Password"
                android:paddingLeft="20dp"

                android:layout_marginBottom="10dp"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:background="@drawable/whiteroundtextbackground"
                android:textColor="#FFFFFF"
                android:textColorHint="#FFFFFF"
                android:id="@+id/confirmPassword"
                android:hint=" Confirm Password"
                android:paddingLeft="20dp"
                android:layout_marginBottom="10dp"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:background="@drawable/whiteroundtextbackground"
                android:textColor="#FFFFFF"
                android:textColorHint="#FFFFFF"
                android:id="@+id/firstName"
                android:hint=" First Name"
                android:paddingLeft="20dp"
                android:layout_marginBottom="10dp"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:background="@drawable/whiteroundtextbackground"
                android:textColor="#FFFFFF"
                android:textColorHint="#FFFFFF"
                android:id="@+id/middleName"
                android:hint=" Middle Name"
                android:paddingLeft="20dp"
                android:layout_marginBottom="10dp"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:background="@drawable/whiteroundtextbackground"
                android:textColor="#FFFFFF"
                android:textColorHint="#FFFFFF"
                android:id="@+id/lastName"
                android:hint=" Last Name"
                android:paddingLeft="20dp"
                android:layout_marginBottom="10dp"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:background="@drawable/whiteroundtextbackground"
                android:textColor="#FFFFFF"
                android:textColorHint="#FFFFFF"
                android:id="@+id/BOD"
                android:hint=" Your Date of Birth( mm/dd/yyyy)"
                android:paddingLeft="20dp"
                android:layout_marginBottom="10dp"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:background="@drawable/whiteroundtextbackground"
                android:textColor="#FFFFFF"
                android:textColorHint="#FFFFFF"
                android:id="@+id/SSN"
                android:hint=" SSN"
                android:paddingLeft="20dp"
                android:layout_marginBottom="10dp"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:background="@drawable/whiteroundtextbackground"
                android:textColor="#FFFFFF"
                android:textColorHint="#FFFFFF"
                android:id="@+id/address"
                android:hint=" Your Address"
                android:paddingLeft="20dp"
                android:layout_marginBottom="10dp"/>
        </LinearLayout>

    </ScrollView>

</RelativeLayout>
